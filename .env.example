# Ediens Food Sharing App - Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# DATABASE CONFIGURATION - SQLite
# =============================================================================
DB_PATH=./backend/database/ediens.sqlite

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# =============================================================================
# OAUTH CONFIGURATION
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# =============================================================================
# MAPBOX CONFIGURATION (for production)
# =============================================================================
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# =============================================================================
# EMAIL CONFIGURATION (for production)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# API Configuration
VITE_API_URL=http://localhost:3001
VITE_API_TIMEOUT=10000

# OAuth Configuration (Frontend)
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_FACEBOOK_APP_ID=your-facebook-app-id

# Map Configuration (Frontend)
VITE_MAPBOX_ACCESS_TOKEN=your-mapbox-access-token
VITE_MAPBOX_STYLE_URL=mapbox://styles/mapbox/streets-v11

# Feature Flags
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG_LOGGING=true

# App Configuration
VITE_APP_NAME=Ediens
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Food sharing platform to reduce waste in Latvia

# External Services
VITE_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
VITE_CLOUDINARY_UPLOAD_PRESET=ediens_uploads

# Development Configuration
VITE_DEV_MODE=true
VITE_MOCK_API=false